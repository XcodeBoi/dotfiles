
# tiling system init
yabai -m config window_placement second_child
yabai -m config layout bsp

# padding/gaps
yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   20
yabai -m config right_padding  20
yabai -m config window_gap     5

# mouse config
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config focus_follows_mouse autoraise
yabai -m config mouse_follows_focus on

# window styling
yabai -m config window_topmost on
yabai -m config window_shadow off
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config window_border on
yabai -m config active_window_border_color 0xAA458588
yabai -m config normal_window_border_color 0xAAAAAAAA

# space naming
yabai -m space 1 --label HOME
yabai -m space 2 --label SHELL

# bar intergration
SPACEBAR_HEIGHT=$(spacebar -m config height)
yabai -m config external_bar all:$SPACEBAR_HEIGHT:0
# [A reminder of how well this was written] 
# yabai -m signal --add event=space_changed action='spacebar -m config center_shell_command "tmp_dta=$(yabai -m query --spaces --space); echo $(jq -r .label <<< $tmp_dta)\($(jq -r .index <<< $tmp_dta)\): $(jq -r .type <<< $tmp_dta)"'
yabai -m signal --add event=space_changed action='spacebar -m config center_shell_command "echo $(yabai -m query --spaces --space | jq -r .label) \($(yabai -m query --spaces --space | jq -r .index)\): $(yabai -m query --spaces --space | jq -r .type)"'

# script loading
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
